<Page x:Class="DemoExam1.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoExam1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">
    <Grid>
        <StackPanel MinWidth="250"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Content="Авторизация"/>
            <StackPanel >
                <Label Content="Логин"/>
                <TextBox Text="{Binding Login}"/>
            </StackPanel>
            <StackPanel Margin="0 10 0 0">
                <Label Content="Пароль"/>
                <TextBox Text="{Binding Password}"/>
            </StackPanel>
            <Button Margin="0 10 0 0" Content="Войти" Click="Auth"/>
        </StackPanel>
    </Grid>
</Page>
